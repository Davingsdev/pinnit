<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NotifTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorTerciary">@color/colorTerciary</item>
        <item name="colorOnTerciary">@color/colorOnTerciary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="colorDivider">@color/colorDivider</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="bottomSheetDialogTheme">@style/NotifTheme.BottomSheet</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogButtons</item>
    </style>
    
    <style name="NotifTheme.BottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

</resources>