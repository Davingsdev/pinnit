<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="mainViewModel"
      type="dev.sasikanth.pinnit.MainViewModel" />
  </data>

  <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/main_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutFullscreen="@{true}"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:backgroundTint="?android:attr/colorBackground"
      app:liftOnScroll="true">

      <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways"
        app:paddingTopSystemWindowInsets="@{true}">

        <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <ImageView
            android:id="@+id/clear_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/clear_history"
            android:focusable="true"
            android:padding="16dp"
            android:src="@drawable/ic_pinnit_delete"
            android:tint="?attr/colorSecondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

          <com.google.android.material.textview.MaterialTextView
            android:id="@+id/app_bar_label"
            style="@style/TextStyle.Pinnit.Headline6"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/history" />

        </androidx.constraintlayout.widget.ConstraintLayout>

      </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <fragment
      android:id="@+id/nav_host_fragment"
      android:name="androidx.navigation.fragment.NavHostFragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:defaultNavHost="false"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      app:navGraph="@navigation/nav_graph" />

    <dev.sasikanth.pinnit.shared.widget.PinnitBottomBar
      android:id="@+id/bottom_app_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      app:onOptionsClick="@{() -> mainViewModel.showOptionsMenu()}"
      app:onPageActionClick="@{() -> mainViewModel.notifAction()}" />

  </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
