<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- TODO: Set visibility to gone -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingBottom="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:paddingBottomSystemWindowInsets="@{true}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/error_notif_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:visibility="visible"
            tools:showIn="@layout/fragment_current">

            <ImageView
                android:id="@+id/error_notif_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/pinnit_pin_icon"
                app:layout_constraintEnd_toEndOf="@id/error_notif_title"
                app:layout_constraintStart_toStartOf="@id/error_notif_title"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/error_notif_title"
                style="@style/TextStyle.Pinnit.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/notif_error_current_title"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/error_notif_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/error_notif_subtitle"
                style="@style/TextStyle.Pinnit.Subtitle2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/notif_error_current_subtitle"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@id/error_notif_title"
                app:layout_constraintStart_toStartOf="@id/error_notif_title"
                app:layout_constraintTop_toBottomOf="@id/error_notif_title" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/error_notif_action"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:text="@string/view_history"
                app:cornerRadius="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/error_notif_title"
                app:layout_constraintStart_toStartOf="@id/error_notif_title"
                app:layout_constraintTop_toBottomOf="@id/error_notif_subtitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>
